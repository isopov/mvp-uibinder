<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <g:DecoratorPanel>
  <g:VerticalPanel>
	    <g:HorizontalPanel>
	      	<g:Label>First name</g:Label>
	      	<g:TextBox ui:field="firstName" />
	    </g:HorizontalPanel>
	    <g:HorizontalPanel>
	      	<g:Label>Last name</g:Label>
	      	<g:TextBox ui:field="lastName" />
	    </g:HorizontalPanel>
	    <g:HorizontalPanel>
	      	<g:Label>Email</g:Label>
	      	<g:TextBox ui:field="email" />
	    </g:HorizontalPanel>
	    <g:HorizontalPanel>
	      	<g:Button ui:field="saveButton">Save</g:Button>
	      	<g:Button ui:field="cancelButton">Cancel</g:Button>
	    </g:HorizontalPanel>
	  </g:VerticalPanel>
  </g:DecoratorPanel>
</ui:UiBinder> 